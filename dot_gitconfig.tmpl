[user]
	email = {{ .email }}
	name = {{ .name }}
	
[core]
  editor = code --wait
  
[diff]
  tool = vscode
  
[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE
  
[merge]
  tool = vscode
  
[mergetool "vscode"]
  cmd = code --wait $MERGED
  
[color]
	ui = true
	
[pull]
	rebase = false

[help]
	autocorrect = prompt
	
[commit]
	gpgsign = true
	
[init]
	defaultBranch = main
